<div class="container">

    <h1>Eat More Burgers!</h1>

<form class="create-form">

  <div class="form-group">
    <label for="burgerBox" id="burgerBoxLabel">Enter your burger here...</label>
    <br>
    <textarea class="form-control-file" id="burgerBox" rows="3"></textarea>
  </div>

  <button type="submit">Add a Burger</button>
</form>

<h3>Eat these burgers</h3>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<div id="deletedBurgerDiv">
    
</div>

<h3>Devoured burgers</h3>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>

</div>